<body>
    <header>
        <div class="head">
            <div class="container pt-5 pb-5">
                <div class="float-right">
                    <a type="button" href="/sessionLogout" class="btn btn-light">Logout</a>
                </div>
                <div class="">
                    <span class="text-uppercase text-white font-secondary font-size-12">Admin Panel</span>
                    <h3 class="">Athmakalin Sangamam</h3>
                </div>
                <style>
                    .head {
                        background-color: #FFAEAE;
                    }
                </style>
            </div>
        </div>
    </header>
    <main>
        <div class="container pt-5">
            <h4>Articles</h4>
            <div class="row">
                <% for(var i=0; i < data.length; i++) { %>
                <div id="<%= data[i].id %>" class="col-lg-3 col-md-4 col-sm-6">
                    <div class="card p-3 m-1">
                        <div class="float-right">
                            <button onclick="dele('<%= data[i].id %>')" type="button" class="close" data-toggle="modal" data-target="#exampleModal">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>

                        <img src="<%= data[i].image %>" class="img-fluid" style="border-radius: 20px;">
                        <h5 class="pt-2"><%= data[i].title %></h5>
                        <div class="d-inline-block">
                            <span class="badge badge-pill mb-3 bg-primary"><%= data[i].date.toDateString() %></span>
                        </div>
                        <a href="/fullblog-<%= data[i].id %>" class="btn btn-dark">View</a>
                        <script>
                            function dele<%= data[i].id %>(){
                                fetch("/blogDel-<%= data[i].id %>")
                                .then((res)=>{ return( res.json() ) })
                                .then((data)=>{
                                    console.log(data['data'])
                                    g=document.getElementById('<%= data[i].id %>').remove()
                                })
                            }
                        </script>
                    </div>
                </div>
                <%}%>
            </div>
            <script>
                function dele(a){
                    document.getElementById("delMod").setAttribute('onclick','dele'+a+'()')
                }
            </script>
            <!-- Button trigger modal -->

              
              <!-- Modal -->
              <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Warning!</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">
                        Do you want to delete the article?
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">No Close</button>
                      <button type="button" id="delMod" data-dismiss="modal" class="btn btn-primary">Yes Delete</button>
                    </div>
                  </div>
                </div>
              </div>
        </div>
    </main>
    <footer></footer>
      <script src="js/jquery-1.12.4.min.js"></script>
      <script src="js/bootstrap.min.js"></script>
      <script src="js/script.js"></script>
</body>

